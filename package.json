{
  "name": "openclaw-mem",
  "version": "0.1.0",
  "description": "Persistent memory system for OpenClaw - automatic context capture, semantic search, and progressive disclosure",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openclaw-mem": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/worker/server.ts",
    "build": "tsc && npm run build:ui",
    "build:ui": "cd ui && npm run build",
    "start": "node dist/worker/server.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "openclaw",
    "memory",
    "ai",
    "context",
    "llm",
    "claude",
    "persistent-memory",
    "semantic-search"
  ],
  "author": "OpenClaw Contributors",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openclaw/openclaw-mem.git"
  },
  "bugs": {
    "url": "https://github.com/openclaw/openclaw-mem/issues"
  },
  "homepage": "https://github.com/openclaw/openclaw-mem#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chromadb": "^1.8.0",
    "fastify": "^4.26.0",
    "fastify-static": "^4.7.0",
    "glob": "^10.3.0",
    "tiktoken": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "ui/dist",
    "README.md",
    "LICENSE"
  ]
}
